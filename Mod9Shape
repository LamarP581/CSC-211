/**
 *
 * @author itlabs
 */
public class Shape {
private int numofPoints;
private int numofSides;
private Color color;



public Shape (int numofPoints, int numofSides,Color color){
    this.numofPoints = numofPoints;
    this.numofSides = numofSides;
    this.color = color;
}
public int getNumofpoints(){
    return numofPoints;
}

public int getNumofsides(){
    return numofSides;
}
public Color getcolor(){
return color;
}
public void setnumsidesOrpoints(int numofPoints, int numofSides){
    this.numofPoints = numofPoints;
    this.numofSides = numofSides;

}

public void describeShape(){
    System.out.println("Shape with "+ numofPoints + " points and " + numofSides + "sides.Color: " + color.getColorName());
}
}



